{% extends 'base.html.twig' %}

{% block body%}

    <div>
        <h2>Se Connecter</h2>
      <h3>Pas encore de compte? <a href="{{ path('security_registration') }}">Creer un compte</a> </h3>
    </div>
    <section class="container mt-4">
     {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messageData,'security') }}
        </div>
    {% endif %}
    <form action="{{ path('security_login') }}" method="post">

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="_username" id="email" placeholder="Enter you email" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" placeholder="Your password" class="form-control">
        </div>
        <div class="form-group">
            <input type="submit" value="Se Connecter" class="btn btn-primary">
            <input type="reset" name="annuler" value="annuler" class="btn btn-primary">
        </div>
    </form>

</section>
{% endblock %}

